<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_gray_background"
    android:orientation="vertical"
    android:paddingTop="10dp"
    tools:context=".ui.activity.PersonHomeActivity">

    <RelativeLayout
        android:id="@+id/edit_personal_information_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_size"
        android:background="@drawable/bg_change"
        android:clickable="true"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/edit_personal_information_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical"
            android:text="@string/edit_personal_information"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_text_size" />

        <ImageView
            android:id="@+id/edit_personal_information_arrow"
            android:layout_width="@dimen/settings_arrow_size"
            android:layout_height="@dimen/settings_arrow_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/more_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#1A000000" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/blacklist_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_size"
        android:background="@drawable/bg_change"
        android:clickable="true"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/blacklist_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical"
            android:text="@string/blacklist"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_text_size" />

        <ImageView
            android:id="@+id/blacklist_arrow"
            android:layout_width="@dimen/settings_arrow_size"
            android:layout_height="@dimen/settings_arrow_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/more_arrow" />

    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>