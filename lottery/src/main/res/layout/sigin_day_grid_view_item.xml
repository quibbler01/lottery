<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/bounce"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#cd6035"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/money"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/bounce"
        android:layout_centerHorizontal="true"
        android:background="@drawable/welfare_task_day_sign"
        android:gravity="top|center_horizontal"
        android:textColor="#e49a63"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/money"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/golden_bean" />

    <TextView
        android:id="@+id/day"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/money"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#d8a987"
        android:textSize="12dp" />

</RelativeLayout>