<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginStart="@dimen/app_margin"
    android:layout_marginTop="@dimen/recycler_item_margin"
    android:layout_marginEnd="@dimen/app_margin"
    android:layout_marginBottom="@dimen/recycler_item_margin"
    android:background="@drawable/white_bg_with_corner"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lottery_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="第23040期"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/divider"
            android:text="2023-04-13"
            android:textColor="#99000000"
            android:textSize="13dp" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/weekend"
            android:background="#1A000000" />

        <TextView
            android:id="@+id/weekend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="星期四"
            android:textColor="#99000000"
            android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/number_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="02"
            android:textColor="@color/red_num"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/number_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/number_1"
            android:gravity="center"
            android:text="03"
            android:textColor="@color/red_num"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/number_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/number_2"
            android:gravity="center"
            android:text="09"
            android:textColor="@color/red_num"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/number_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/number_3"
            android:gravity="center"
            android:text="13"
            android:textColor="@color/red_num"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/number_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/number_4"
            android:gravity="center"
            android:text="19"
            android:textColor="@color/red_num"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/number_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/number_5"
            android:gravity="center"
            android:text="28"
            android:textColor="@color/red_num"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/number_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/number_6"
            android:gravity="center"
            android:text="09"
            android:textColor="@color/blue_num"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/more_arrow"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/more_arrow" />

    </RelativeLayout>

</LinearLayout>