<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_gray_background"
    android:orientation="vertical"
    android:paddingTop="12dp"
    tools:context=".ui.activity.SettingsActivity">

    <RelativeLayout
        android:id="@+id/setting_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_size"
        android:background="@drawable/bg_change"
        android:clickable="true"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <ImageView
            android:id="@+id/setting_account_icon"
            android:layout_width="@dimen/settings_icon_size"
            android:layout_height="@dimen/settings_icon_size"
            android:layout_centerVertical="true"
            android:src="@drawable/settings_safe" />

        <TextView
            android:id="@+id/setting_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@id/setting_account_arrow"
            android:layout_toEndOf="@id/setting_account_icon"
            android:gravity="start|center_vertical"
            android:text="@string/settings_safe"
            android:textColor="@color/settings_text_color"
            android:textSize="@dimen/settings_text_size" />

        <ImageView
            android:id="@+id/setting_account_arrow"
            android:layout_width="@dimen/settings_arrow_size"
            android:layout_height="@dimen/settings_arrow_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/more_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/settings_line_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_size"
        android:background="@drawable/bg_change"
        android:clickable="true"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <ImageView
            android:id="@+id/setting_pay_icon"
            android:layout_width="@dimen/settings_icon_size"
            android:layout_height="@dimen/settings_icon_size"
            android:layout_centerVertical="true"
            android:src="@drawable/settings_pay" />

        <TextView
            android:id="@+id/setting_pay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@id/setting_pay_arrow"
            android:layout_toEndOf="@id/setting_pay_icon"
            android:gravity="start|center_vertical"
            android:text="@string/settings_pay"
            android:textColor="@color/settings_text_color"
            android:textSize="@dimen/settings_text_size" />

        <ImageView
            android:id="@+id/setting_pay_arrow"
            android:layout_width="@dimen/settings_arrow_size"
            android:layout_height="@dimen/settings_arrow_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/more_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/settings_line_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_upgrade"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_size"
        android:background="@drawable/bg_change"
        android:clickable="true"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <ImageView
            android:id="@+id/setting_upgrade_icon"
            android:layout_width="@dimen/settings_icon_size"
            android:layout_height="@dimen/settings_icon_size"
            android:layout_centerVertical="true"
            android:src="@drawable/settings_check_upgrade" />

        <TextView
            android:id="@+id/setting_upgrade_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@id/setting_upgrade_arrow"
            android:layout_toEndOf="@id/setting_upgrade_icon"
            android:gravity="start|center_vertical"
            android:text="@string/settings_check_upgrade"
            android:textColor="@color/settings_text_color"
            android:textSize="@dimen/settings_text_size" />

        <ImageView
            android:id="@+id/setting_upgrade_arrow"
            android:layout_width="@dimen/settings_arrow_size"
            android:layout_height="@dimen/settings_arrow_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/more_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/settings_line_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_size"
        android:background="@drawable/bg_change"
        android:clickable="true"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <ImageView
            android:id="@+id/setting_about_icon"
            android:layout_width="@dimen/settings_icon_size"
            android:layout_height="@dimen/settings_icon_size"
            android:layout_centerVertical="true"
            android:src="@drawable/settings_about" />

        <TextView
            android:id="@+id/setting_about_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@id/setting_about_arrow"
            android:layout_toEndOf="@id/setting_about_icon"
            android:gravity="start|center_vertical"
            android:text="@string/settings_about"
            android:textColor="@color/settings_text_color"
            android:textSize="@dimen/settings_text_size" />

        <ImageView
            android:id="@+id/setting_about_arrow"
            android:layout_width="@dimen/settings_arrow_size"
            android:layout_height="@dimen/settings_arrow_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/more_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/settings_line_color"
            android:visibility="invisible" />

    </RelativeLayout>

    <TextView
        android:id="@+id/log_out"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/settings_logout_white_background"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/log_out"
        android:textColor="#99000000"
        android:textSize="14.5dp" />

</LinearLayout>