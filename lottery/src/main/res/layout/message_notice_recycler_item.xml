<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/system_notification_view"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/system_notification_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/system_notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/system_notification_icon"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/system_notification_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/system_notification_title"
        android:layout_alignStart="@id/system_notification_title"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/system_notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
