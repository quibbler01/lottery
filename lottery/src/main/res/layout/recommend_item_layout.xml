<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/my_card_white_background"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="10dp"
    android:paddingEnd="20dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/icon_head"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/my_default_head_icon" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/icon_head"
        android:gravity="start|center_vertical"
        android:minWidth="100dp"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/icon_head"
        android:gravity="start|center_vertical"
        android:minWidth="100dp"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/layout_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/icon_head"
        android:layout_marginTop="8dp"
        android:background="#fff5f0"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/divider_layout"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@id/layout_view"
        android:gravity="center|center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/divider_left"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:background="#0D000000" />

        <TextView
            android:id="@+id/text_center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="50dp" />

        <View
            android:id="@+id/divider_right"
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:background="#0D000000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_layout"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp" />

    </LinearLayout>

</RelativeLayout>