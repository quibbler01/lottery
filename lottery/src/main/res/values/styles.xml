<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tab_label_text_style">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="single_text_style">
        <item name="android:singleLine">true</item>
    </style>

    <style name="center_text_style" parent="single_text_style">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#80000000</item>
    </style>

    <style name="red_ball_text">
        <item name="android:background">@drawable/red_num_ball_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="blue_ball_text">
        <item name="android:background">@drawable/blue_num_ball_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_switcher_style">
        <item name="android:gravity">center|start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>

</resources>